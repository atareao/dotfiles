#!/bin/sh
{% if env.MACHINE == "archi" -%}
export RESTIC_REPOSITORY="/data/restic"
export RESTIC_PASSWORD="{{ env.RESTIC_PASSWORD }}"
export AWS_ACCESS_KEY_ID="{{ env.AWS_ACCESS_KEY_ID }}"
export AWS_SECRET_ACCESS_KEY="{{ env.AWS_SECRET_ACCESS_KEY }}"
REPO1="local:/data/resticbackup"
REPO2="s3:https://{{ env.RESTIC_S3_SERVER }}/restic-archi"
REPO3="s3:https://{{ env.RESTIC_S3_ONE_SERVER }}/restic-one"
RESPOS=("$REPO1" "$REPO2" "$REPO3")

for REPO in "${REPOS[@]}"
    echo "=== Start backup at $REPOSITORY ==="
    restic backup -r "$REPO"                             \
                  --verbose                              \
                  --skip-if-unchanged                    \
                  /data/ansible                          \
                  /data/appimage                         \
                  /data/atareao.es                       \
                  /data/bash                             \
                  /data/dockers                          \
                  /data/flatpak                          \
                  /data/gnome                            \
                  /data/javascript                       \
                  /data/notas                            \
                  /data/php                              \
                  /data/podcasts                         \
                  /data/python                           \
                  /data/rust                             \
                  /data/secreto                          \
                  /data/semaphore                        \
                  /data/typescript                       \
                  /data/typst                            \
                  /data/vaults                           \
                  /data/VÃ­deos                           \
                  /home/lorenzo/.password-store          \
                  /home/lorenzo/.ssh                     \
                  /home/lorenzo/.config                  \
                  /home/lorenzo/.gnupg                   \
                  /home/lorenzo/.gnupg                   \
                  --exclude '*.aup'                      \
                  --exclude '*.au'                       \
                  --exclude '*.mkv'                      \
                  --exclude '*.mp3'                      \
                  --exclude '/data/**/venv/'             \
                  --exclude '/data/**/target/'           \
                  --exclude '/data/**/.venv/'            \
                  --exclude '/data/**/.git/'             \
                  --exclude '/data/**/.pnpm/'            \
                  --exclude '/data/**/.cargo/'           \
                  --exclude '/data/**/__pycache__/'
    echo "=== End backup at $REPOSITORY ==="
    echo "=== Start check $REPOSITORY ==="
    restic check -r "$REPO"
    echo "=== End check $REPOSITORY ==="
    echo "=== Start prune $REPOSITORY ==="
    restic forget -r "$REPO"                            \
                  --prune                               \
                  --keep-daily 7                        \
                  --keep-weekly 4                       \
                  --keep-monthly 6
    echo "=== End prune $REPOSITORY ==="
done
{% endif -%}
