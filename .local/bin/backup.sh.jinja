function publish(){
    repository="$1"
    action="$2"
    data="$3"
    result=""
    ok="$4"
    while read line;do
        if [[ -z $result ]]; then
            result="${line}"
        else
            result="${result}|${line}"
        fi
    done< <(echo $data)
    echo $output
    curl -X 'POST' \
        "https://{{ env.ZINCOBSERVE_URL }}/api/default/archi_backup/_json" \
        -H "accept: application/json" \
        -H "Authorization: Basic {{ env.ZINCOBSERVE_TOKEN }}" \
        -H "Content-Type: application/json" \
        -d "[
                {
                    \"repository\": \"${repository}\",
                    \"action\": \"${action}\",
                    \"ok\": \"${ok}\",
                    \"result\": \"${result}\"
                }
            ]"
}

{% if env.MACHINE == "archi" -%}
PROFILES=(local minio_local rustfs_server)
for profile in "${PROFILES[@]}"
do
    echo "=== Backup ${profile} ==="
    create_output=$(rustic -P ${profile} backup)
    ok=$?
    publish "${profile}" "backup" "${create_output}" "${ok}"
    check_output=$(rustic  -P ${profile} check)
    ok=$?
    publish "${profile}" "check" "${check_output}" "${ok}"
    cleanup_output=$(rustic -P ${profile} forget)
    ok=$?
    publish "${profile}" "forget" "${cleanup_output}" "${ok}"
    snapshots_output=$(rustic -P ${profile} snapshots)
    ok=$?
    publish "${profile}" "snapshots" "${snapshots_output}" "${ok}"
done
{% endif -%}
