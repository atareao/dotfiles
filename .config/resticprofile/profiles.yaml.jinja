  repository: "local:/data/resticbackup"
  backup:
    verbose: true
    tag:
      - default
    source:
      - "/data/ansible"
      - "/data/appimage"
      - "/data/atareao.es"
      - "/data/bash"
      - "/data/dockers"
      - "/data/flatpak"
      - "/data/gnome"
      - "/data/javascript"
      - "/data/notas"
      - "/data/php"
      - "/data/podcasts"
      - "/data/python"
      - "/data/rust"
      - "/data/secreto"
      - "/data/semaphore"
      - "/data/typescript"
      - "/data/typst"
      - "/data/vaults"
      - "/data/VÃ­deos"
      - "/home/lorenzo/.password-store"
      - "/home/lorenzo/.ssh"
      - "/home/lorenzo/.config"
      - "/home/lorenzo/.gnupg"
    exclude: 
      - "*.aup"
      - "*.au"
      - "*.mkv"
      - "*.mp3"
