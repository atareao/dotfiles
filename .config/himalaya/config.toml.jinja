display-name = "{{ env.USER_FNAME }}"
downloads-dir = "~/Descargas"
signature = """
Un saludo,
Lorenzo
"""

[accounts.atareao]
email = "{{ env.ATAREAO_EMAIL }}"

backend.type = "imap" # imap, maildir or notmuch
backend.host = "mail.atareao.es"
backend.port = 993
backend.login = "{{ env.ATAREAO_EMAIL }}"
backend.auth.type = "password"
backend.auth.cmd = "pass show atareao/pass"

message.send.backend.type = "smtp"
message.send.backend.host = "mail.atareao.es"
message.send.backend.port = 465
message.send.backend.login = "{{ env.ATAREAO_EMAIL }}"
message.send.backend.auth.type = "password"
message.send.backend.auth.cmd = "pass show atareao/pass"

folder.aliases.sent = "INBOX.Sent"

[accounts.gmail]
default = true
email = "{{ env.USER_EMAIL }}"

backend.type = "imap" # imap, maildir or notmuch
backend.host = "imap.gmail.com"
backend.port = 993
imap-login = "{{ env.USER_EMAIL }}"
backend.auth.type = "password"
backend.auth.cmd = "pass show gmail/pass"

message.send.backend.type = "smtp" # smtp or sendmail
message.send.backend.host = "smtp.gmail.com"
message.send.backend.port = 465
smtp-login = "lorenzo.carbonell.cerezo@gmail.com"
message.send.backend.auth.type = "password"
message.send.backend.auth.cmd = "pass show gmail/pass"

folder.aliases.inbox = "INBOX"
folder.aliases.sent = "[Gmail]/Sent Mail"
folder.aliases.drafts = "[Gmail]/Drafts"
folder.aliases.trash = "[Gmail]/Trash"

