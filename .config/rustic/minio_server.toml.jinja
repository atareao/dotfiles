[repository]
repository = "opendal:s3"
password = "{{ env.RESTIC_PASSWORD }}"

[repository.options]
root = "/"
bucket = "restic-archi"
endpoint = "https://{{ env.RESTIC_S3_SERVER }}"
region = "s3"
access_key_id = "{{ env.RESTIC_AWS_ACCESS_KEY_ID }}"
secret_access_key = "{{ env.RESTIC_AWS_SECRET_ACCESS_KEY }}"

[forget]
keep-daily = 7
keep-weekly = 4
keep-monthly = 6

[[backup.snapshots]]
sources = ["/data/android", "/data/ansible", "/data/appimage", "/data/atareao.es", "/data/bash", "/data/dockers", "/data/flatpak", "/data/gnome", "/data/javascript", "/data/notas", "/data/php", "/data/podcasts", "/data/python", "/data/rust", "/data/secreto", "/data/semaphore", "/data/typescript", "/data/typst", "/data/VÃ­deos", "/data/yazi", "/home/lorenzo/.password-store", "/home/lorenzo/.ssh", "/home/lorenzo/.config", "/home/lorenzo/.gnupg"]
iglobs = ["!*.aup", "!*.au", "!*.mkv", "!*.mp3", "!/data/**/venv/", "!/data/**/target/", "!/data/**/.venv/", "!/data/**/.git/", "!/data/**/.pnpm/", "!/data/**/.cargo/", "!/data/**/__pycache__/"]

[backup.snapshots.hooks]
run-after = ['curl -X "POST" "https://openobserve.territoriolinux.es/api/default/archi_backup/_json"  -H "accept: application/json" -H "Authorization: Basic {{ env.ZINCOBSERVE_TOKEN }}"  -H "Content-Type: application/json"  -d "[{\"repository\": \"s3-remote\", \"action\": \"backup\", \"ok\": \"true\"}]"']
run-failed = ['curl -X "POST" "https://openobserve.territoriolinux.es/api/default/archi_backup/_json"  -H "accept: application/json" -H "Authorization: Basic {{ env.ZINCOBSERVE_TOKEN }}"  -H "Content-Type: application/json"  -d "[{\"repository\": \"s3-remote\", \"action\": \"backup\", \"ok\": \"false\"}]"']
